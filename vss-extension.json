{
    "manifestVersion": 1,
      "id": "conjur-service-endpoint-batch",
      "version": "0.1.1",
      "name": "Conjur API Key Based Service Connector",
      "description": "A service endpoint to connect to Conjur using API Key",
      "publisher": "pradeep12",
      "icons": {
        "default": "images/icon.png"
      },
      "targets": [
        {
          "id": "Microsoft.VisualStudio.Services"
        }
      ], 
      "categories": [
        "Azure Pipelines"
      ],
      "contributions": [
        {
          "id": "service-endpoint",
          "description": "Service endpoint type for Conjur API Key Based connections",
          "type": "ms.vss-endpoint.service-endpoint-type",
          "targets": [ "ms.vss-endpoint.endpoint-types" ],

          "properties": {
            "name": "Conjur",
            "displayName": "Conjur Server Connection",
            "url": {
              "displayName": "URL to Conjur Endpoint"
            },
            "authenticationSchemes": [
              {
                "type": "ms.vss-endpoint.endpoint-auth-scheme-token"
              },
              {
                "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                "inputDescriptors": [
                  {
                    "id": "conjuraccount",
                    "name": "Conjur Account Name",
                    "description": "Account Name of the Conjur Instance",
                    "isConfidential": false,
                    "inputMode": "passwordbox",
                    "validation": {
                      "isRequired": true,
                      "dataType": "string"
                    }
                  },
                  {
                    "id": "conjurusername",
                    "name": "Username",
                    "description": "Username to use to connect to Conjur",
                    "isConfidential": false,
                    "inputMode": "passwordbox",
                    "validation": {
                      "isRequired": true,
                      "dataType": "string"
                    }
                  },
                  {
                    "id": "conjurapikey",
                    "name": "API Key",
                    "description": "API Key to use to connect to Conjur",
                    "inputMode": "passwordbox",
                    "isConfidential": true,
                    "validation": {
                      "isRequired": true,
                      "dataType": "string"
                    }
                  },
                  {
                    "id": "secretsyml",
                    "name": "Secrets Path Yml File",
                    "description": "Yml file for the secrets to be retrieved",
                    "inputMode": "passwordbox",
                    "isConfidential": true,
                    "default": false,
                    "validation": {
                      "isRequired": false,
                      "dataType": "string"
                    }
                  },
                  {
                    "id": "ignoressl",
                    "name": "Ignore SSL Error",
                    "description": "Check to ignore SSL errors when making HTTPS connection",
                    "inputMode": "CheckBox",
                    "default": "false",
                    "isConfidential": false,
                    "validation": {
                      "isRequired": false,
                      "dataType": "string"
                    }
                  }
                ]
              }
            ]
          }
        },
        {
            "id": "secretBatchRetrievalConnector",
            "description": "Task for retrieveing secrets from CyberArk Conjur using API key",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
              "name": "secretBatchRetrievalConnector"
            }
        }
      ],
      "files": [
        {
          "path": "secretBatchRetrievalConnector"
        }
      ]
    }